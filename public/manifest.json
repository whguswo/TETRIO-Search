{
    "name": "TETRIO Search",
    "description": "TETR.IO 유저의 전적을 검색할수있습니다.",
    "version": "1.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "js/background.js"
    },
    "host_permissions": [
        "https://ch.tetr.io/*"
    ],
    "action": {
        "default_popup": "html/popup.html",
        "default_icon": {
            "16": "images/T16.png",
            "32": "images/T32.png",
            "48": "images/T48.png",
            "128": "images/T128.png"
        }
    },
    "icons": {
        "16": "images/T16.png",
        "32": "images/T32.png",
        "48": "images/T48.png",
        "128": "images/T128.png"
    }
}